    <script>
    function tampilHasil(){
    
    var nama = document.getElementById("nama").value;
    var jenisKopi = document.getElementById("jenisKopi").value;
    var alamatPemesan = document.getElementById("alamatPemesan").value;
    var ukuran = document.querySelector('input[name="ukuran"]:checked').value;

    var hargaKopi;
    switch (jenisKopi) {
        case "kopiarabika": hargaKopi = 10000;
            break;
        case "kopirobusta": hargaKopi = 15000;
            break;
        case "kopiliberika": hargaKopi = 20000;
            break;
        case "kopiekselsa": hargaKopi = 25000;
            break;
        default:
            hargaKopi = 0;
    }

    var hargaUkuran;
    switch (ukuran) {
        case "Sedang":
            hargaUkuran = 2500;
            break;
        case "Besar":
            hargaUkuran = 5000;
            break;
        default:
            hargaUkuran = 0;
    }
    var totalHarga = hargaKopi + hargaUkuran;

    var hasil = "Nama: " + nama + "<br>" +
                "Alamat: " + alamatPemesan + "<br>" +
                "Pesanan Jenis Kopi: " + jenisKopi + "<br>" +
                "Ukuran: " + ukuran + "<br>" +
                "Total: Rp " + totalHarga;

    document.getElementById("hasil").innerHTML = hasil;
}
    </script> 
